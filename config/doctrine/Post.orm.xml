<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Post" table="post">
    <indexes>
      <index name="IDX_5A8A6C8D55AB140" columns="auteur"/>
    </indexes>
    <id name="idPost" type="integer" column="id_post">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="post_id_post_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="legend" type="text" column="legend" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="datePost" type="date" column="date_post" nullable="true"/>
    <field name="timePost" type="time" column="time_post" nullable="true"/>
    <field name="dataPost" type="string" column="data_post" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="auteur" target-entity="Users" fetch="LAZY">
      <join-columns>
        <join-column name="auteur" referenced-column-name="id_user"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
