<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Commentaire" table="commentaire">
    <indexes>
      <index name="IDX_67F068BC55AB140" columns="auteur"/>
      <index name="IDX_67F068BC5A8A6C8D" columns="post"/>
    </indexes>
    <id name="idCommentaire" type="integer" column="id_commentaire">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="commentaire_id_commentaire_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="contenu" type="text" column="contenu" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateCommentaire" type="date" column="date_commentaire" nullable="true"/>
    <field name="heure" type="time" column="heure" nullable="true"/>
    <many-to-one field="auteur" target-entity="Users" fetch="LAZY">
      <join-columns>
        <join-column name="auteur" referenced-column-name="id_user"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="post" target-entity="Post" fetch="LAZY">
      <join-columns>
        <join-column name="post" referenced-column-name="id_post"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
